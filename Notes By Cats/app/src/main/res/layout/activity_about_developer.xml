<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/dark_purple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutDeveloper"
    android:paddingTop="40dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_hello"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! I'm"/>

        <TextView
            android:id="@+id/text_fullName"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:layout_below="@id/text_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tara Pogančev"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/me"
            android:layout_alignParentEnd="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_fullName"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/main_purple"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >

                <ImageView
                    android:id="@+id/imageView_sketching"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/me_illustration"
                    />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageView_sketching"
                    android:layout_marginStart="30dp"
                    android:text="Current title:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/text_introductionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_title"
                    android:layout_toEndOf="@+id/imageView_sketching"
                    android:layout_marginStart="30dp"
                    android:text="Bachelor with Honours in Electrical and Computer Engineering"
                    android:textColor="#3E3E3E"
                    android:textSize="16dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView_title"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#4A5167"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/text_reachMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Want to reach me?"
                    android:textColor="@color/main_purple"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/text_reachMeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/text_reachMe"
                    android:layout_marginStart="10dp"
                    android:text="tarapogancev@gmail.com"
                    android:textColor="#BAC3ED"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/imageView_email"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_marginEnd="10dp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_detailedAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView_email"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:text="Applied Computer Science and Informatics student, at the Faculty of Technical Sciences, University of Novi Sad. Highly ambitious, open towards new professional experiences and skills. Distinctly interested in acquiring experience in software and web development."
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_littleFunFacts"
            android:layout_alignParentStart="true"
            android:layout_below="@id/view_separatorLine"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=
"🌱  I’m presently focused on Android Mobile Development \n\n
🔭   Most proficient with Spring Boot and Angular \n\n
📫   How to reach me tarapogancev@gmail.com \n\n
📄   Know about my experiences https:\n         www.linkedin.com/in/tara-pogancev/ \n\n
☕   Fun fact I love cats and coffee! \n\n
🎨   Other than programming I do digital illustration and photography \n\n
👀   Come take a look! \n        https://www.artstation.com/tarapogancev/"/>

        <View
            android:id="@+id/view_separatorLine"
            android:layout_below="@id/text_detailedAboutMe"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="10dp"/>


    </RelativeLayout>

</ScrollView>